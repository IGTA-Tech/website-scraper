# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_api_key_here
OPENAI_MODEL=gpt-4o-mini

# SendGrid Configuration (Optional - for email features)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=scraper@yourapp.com
SENDGRID_FROM_NAME=Website Scraper Pro

# Scraper Configuration
DEFAULT_MAX_PAGES=500
RATE_LIMIT_DELAY=0.5
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (compatible; WebsiteScraperPro/1.0)

# Cache Configuration
CACHE_EXPIRY_DAYS=30
CACHE_DB_PATH=cache/scrape_cache.db

# Output Configuration
OUTPUT_DIR=output
DEFAULT_OUTPUT_FORMAT=xlsx
